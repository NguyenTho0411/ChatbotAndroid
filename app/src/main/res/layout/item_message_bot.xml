<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/bot_avatar_small"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bot_message_bubble"
            android:padding="12dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chào! Tôi rất vui được hỗ trợ bạn. Bạn cần giúp đỡ gì ạ?"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_regular"
                android:lineSpacingExtra="2dp" />

            <ImageView
                android:id="@+id/messageImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_chat_image" />

        </LinearLayout>

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:31"
            android:textColor="@color/time_text"
            android:textSize="12sp"
            android:fontFamily="@font/nunito_regular"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>